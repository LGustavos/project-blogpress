<%- include('../../partials/header.ejs'); -%>
    <%- include('../../partials/navbar.ejs'); -%>
        <div class="container">
            <div class="card mt-4 mb-4">
                <div class="card-header">
                    <h2>Novo artigo</h2>
                </div>
                <div class="card-body">
                    <form method="POST" action="/articles/save">
                        <input class="form-control mb-4" type="text" name="title" placeholder="Defina o tÃ­tulo do artigo">
                        <textarea class="form-control" cols="30" rows="10" placeholder="Escreva o novo artigo..." name="body" id="newArticle"></textarea>
                        <h6 class="mt-4">Selecione a categoria</h6>
                        <select name="category" class="form-control">
                            <% categories.forEach((category) => { %>
                                <option value="<%= category.id %>"><%= category.title %></option>
                            <% }) %>
                        </select>
                        <button type="submit" class="btn btn-success mt-4">Cadastrar</button>
                    </form>
                </div>
            </div>
        </div>
<%- include('../../partials/footer.ejs'); -%>
<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        language: 'pt_BR',
        selector: "#newArticle",
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table past emoticons'
        ]
    })
</script>